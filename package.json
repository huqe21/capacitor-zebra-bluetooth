{
  "name": "capacitor-zebra-bluetooth",
  "version": "1.0.0",
  "description": "Capacitor plugin for Zebra thermal printer communication via Classic Bluetooth. Supports iOS (ExternalAccessory) and Android (Bluetooth SPP) with ZPL command support.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/plugin.cjs.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorZebraBluetooth.podspec"
  ],
  "author": {
    "name": "Hugo Niescken",
    "email": "hugo.niescken@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huqe21/capacitor-zebra-bluetooth.git"
  },
  "bugs": {
    "url": "https://github.com/huqe21/capacitor-zebra-bluetooth/issues"
  },
  "homepage": "https://github.com/huqe21/capacitor-zebra-bluetooth#readme",
  "keywords": [
    "capacitor",
    "capacitor-plugin",
    "plugin",
    "native",
    "zebra",
    "printer",
    "thermal-printer",
    "bluetooth",
    "zpl",
    "label-printer",
    "receipt-printer",
    "ios",
    "android",
    "mobile"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/docgen": "^0.2.1",
    "@capacitor/ios": "^7.4.3",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^4.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "prettier-plugin-java": "^2.3.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.4.3"
  },
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
